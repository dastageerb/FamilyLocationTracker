<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.map.FamilyMapFragment">


    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:id="@+id/fragmentFamilyMapCardView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/layoutUsersOnMapUserProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/family_image"

            />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/fragmentFamilyMapRecyclerView"
        android:layout_marginStart="8dp"
        android:layout_below="@id/fragmentFamilyMapCardView"
        android:visibility="gone"
        />


    <com.google.android.gms.maps.MapView
        android:id="@+id/fragmentFamilyMapMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</RelativeLayout>